// -*- mode: jsonc -*-
{
	"height": 30,
	"spacing": 6,
	"modules-left": [
		"hyprland/workspaces",
		"cava"
	],
	"modules-center": [
		"hyprland/window"
	],
	"modules-right": [
		"pulseaudio",
		"network",
		"bluetooth",
		"battery",
		"custom/media",
		"custom/weather",
		"clock",
		"tray"
	],
	// Modules configuration
	"hyprland/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"warp-on-scroll": false,
		"format": "{name}",
		"format-icons": {
			"urgent": "ïª",
			"active": "ï†’",
			"default": "ï„‘"
		}
	},
	"cava": {
		"framerate": 24,
		"autosens": 1,
		"bars": 12,
		"lower_cutoff_freq": 50,
		"higher_cutoff_freq": 10000,
		"hide_on_silence": true,
		"method": "pulse",
		"source": "auto",
		"stereo": false,
		"reverse": false,
		"bar_delimiter": 32,
		"monstercat": false,
		"waves": false,
		"noise_reduction": 0.67,
		"input_delay": 2,
		"format-icons" : ["â–", "â–‚", "â–ƒ", "â–„", "â–…", "â–†", "â–‡", "â–ˆ" ]
	},
	"tray": {
		"spacing": 10
	},
	"clock": {
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format": "{:%H:%M - %a %d}",
		"format-alt": "{:%d-%m-%Y}"
	},
	"battery": {
		"format": "{icon} {capacity}%",
		"format-full": "{icon} {capacity}%",
		"format-charging": "ï—§ {capacity}%",
		"format-plugged": "ï‡¦ {capacity}%",
		"format-alt": "{icon} {time}",
		"format-icons": [
			"ï‰„",
			"ï‰ƒ",
			"ï‰‚",
			"ï‰",
			"ï‰€"
		]
	},
	"network": {
		"format-wifi": "ï‡«",
		"format-ethernet": "{ipaddr}/{cidr} ï–",
		"format-linked": "{ifname} (No IP) ï–",
		"format-disconnected": "No Wi-Fi",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) @ {gwaddr}",
		"on-click": "nm-applet",
		"on-click-middle": "pkill nm-applet",
		"on-click-right": "nm-connection-editor"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-bluetooth": "{icon}ïŠ” {volume}%",
		"format-bluetooth-muted": "ïš© {icon}ïŠ”",
		"format-muted": "ïš© {format_source}",
		"format-source": "ï„° {volume}%",
		"format-source-muted": "ï„±",
		"format-icons": {
			"headphone": "ï€¥",
			"hands-free": "ï–",
			"headset": "ï–",
			"phone": "ï‚•",
			"portable": "ï‚•",
			"car": "ï†¹",
			"default": [
				"ï€¦",
				"ï€§",
				"ï€¨"
			]
		},
		"on-click": "pavucontrol",
		"on-click-right": "easyeffects" 
	},
	"bluetooth": {
		"format": "ïŠ“",
		"tooltip-format": "{status}",
		"format-disabled": "",
		"format-off": "",
		"interval": 30,
		"on-click": "blueman-manager",
		"format-no-controller": ""
	},
	"custom/media": {
		"format": "{text}",
		"return-type": "json",
		"max-length": 50,
		"format-icons": {
			"spotify": "ï†¼",
			"default": "ğŸœ"
		},
		"escape": true,
		"on-click": "playerctl play-pause",
		"on-scroll-up": "playerctl next",
		"on-scroll-down": "playerctl previous",
		"exec": "$HOME/.config/waybar/mediaplayer.py"
	},
	"custom/weather": {
		"format": "{}",
		"return-type": "json",
		"interval": 1800,
		"exec": "$HOME/.config/waybar/weather.py Seeb"
	}
}
