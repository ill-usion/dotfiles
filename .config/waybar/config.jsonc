// -*- mode: jsonc -*-
{
	"height": 30,
	"spacing": 6,
	"modules-left": [
		"hyprland/workspaces",
		"cava"
	],
	"modules-center": [
		"hyprland/window"
	],
	"modules-right": [
		"pulseaudio",
		"network",
		"bluetooth",
		"battery",
		"custom/media",
		"custom/weather",
		"clock",
		"tray"
	],
	// Modules configuration
	"hyprland/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"warp-on-scroll": false,
		"format": "{name}",
		"format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
		}
	},
	"cava": {
		"framerate": 24,
		"autosens": 1,
		"bars": 12,
		"lower_cutoff_freq": 50,
		"higher_cutoff_freq": 10000,
		"hide_on_silence": true,
		"method": "pulse",
		"source": "auto",
		"stereo": false,
		"reverse": false,
		"bar_delimiter": 32,
		"monstercat": false,
		"waves": false,
		"noise_reduction": 0.67,
		"input_delay": 2,
		"format-icons" : ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ]
	},
	"tray": {
		"spacing": 10
	},
	"clock": {
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format": "{:%H:%M - %a %d}",
		"format-alt": "{:%d-%m-%Y}"
	},
	"battery": {
		"format": "{icon} {capacity}%",
		"format-full": "{icon} {capacity}%",
		"format-charging": " {capacity}%",
		"format-plugged": " {capacity}%",
		"format-alt": "{icon} {time}",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		]
	},
	"network": {
		"format-wifi": "",
		"format-ethernet": "{ipaddr}/{cidr} ",
		"format-linked": "{ifname} (No IP) ",
		"format-disconnected": "No Wi-Fi",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) @ {gwaddr}",
		"on-click": "nm-applet",
		"on-click-middle": "pkill nm-applet",
		"on-click-right": "nm-connection-editor"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-bluetooth": "{icon} {volume}%",
		"format-bluetooth-muted": " {icon}",
		"format-muted": " {format_source}",
		"format-source": " {volume}%",
		"format-source-muted": "",
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": [
				"",
				"",
				""
			]
		},
		"on-click": "pavucontrol",
		"on-click-right": "easyeffects" 
	},
	"bluetooth": {
		"format": "",
		"tooltip-format": "{status}",
		"format-disabled": "",
		"format-off": "",
		"interval": 30,
		"on-click": "blueman-manager",
		"format-no-controller": ""
	},
	"custom/media": {
		"format": "{text}",
		"return-type": "json",
		"max-length": 50,
		"format-icons": {
			"spotify": "",
			"default": "🎜"
		},
		"escape": true,
		"on-click": "playerctl play-pause",
		"on-scroll-up": "playerctl next",
		"on-scroll-down": "playerctl previous",
		"exec": "$HOME/.config/waybar/mediaplayer.py"
	},
	"custom/weather": {
		"format": "{}",
		"return-type": "json",
		"interval": 1800,
		"exec": "$HOME/.config/waybar/weather.py Seeb"
	}
}
